<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="ModernWindow.SettingsTab.Widgets.TranslatedTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernWindow.SettingsTab.Widgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name ="Parent">

    <TextBlock x:Name="__textblock" FontSize="{x:Bind Parent.FontSize}" FontFamily="{x:Bind Parent.FontFamily}" FontWeight="{x:Bind Parent.FontWeight}"></TextBlock>
</UserControl>
