<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="ModernWindow.Interface.NavigationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pages="using:ModernWindow.Interface"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interface="using:ModernWindow.Interface"
    xmlns:widgets="using:ModernWindow.Interface.Widgets"
    xmlns:engine="using:ModernWindow.PackageEngine"
    mc:Ignorable="d"
    MinHeight="200"
    MinWidth="200"
    >

    <UserControl.Resources>
        <widgets:BetterMenu x:ConnectionId='2' x:Name="MoreNavButtonMenu" Placement="Right">
            <widgets:BetterMenuItem x:ConnectionId='3' Text="Help" IconName="help" Name="HelpMenu"                        />
            <MenuFlyoutSeparator Height="5"/>
            <widgets:BetterMenuItem x:ConnectionId='4' Text="WingetUI log" IconName="buggy" Name="WingetUILogs"                            />
            <widgets:BetterMenuItem x:ConnectionId='5' Text="Package Manager logs" IconName="console" Name="ManagerLogsMenu"                               />
            <widgets:BetterMenuItem x:ConnectionId='6' Text="Operation history" IconName="history" Name="OperationHistoryMenu"                                    />
            <MenuFlyoutSeparator Height="5"/>
            <widgets:BetterMenuItem x:ConnectionId='7' x:Name="VersionMenuItem" IconName="info" IsEnabled="False" />
            <widgets:BetterMenuItem x:ConnectionId='8' Text="Release notes" IconName="megaphone" Name="ReleaseNotesMenu"                                />
            <MenuFlyoutSeparator Height="5"/>
            <widgets:BetterMenuItem x:ConnectionId='9' Text="Quit WingetUI" IconName="menu_close" Name="QuitWingetUI"                            />
        </widgets:BetterMenu>
    </UserControl.Resources>

    <Grid RowSpacing="4" ColumnSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:ConnectionId='10' Name="MainContentPresenterGrid" RowSpacing="0" Grid.Row="0" Grid.Column="1" Margin="0,0,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="0" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ScrollView Grid.Column="0" Grid.ColumnSpan="7" Grid.Row="1" Margin="0" Padding="0,0,0,0" MaxHeight="200">
                <StackPanel x:ConnectionId='20' Orientation="Vertical" Spacing="0" Margin="0,0,0,0" Padding="0,0,0,0" Name="__operations_list_stackpanel"/>
            </ScrollView>
        </Grid>

        <ScrollViewer HorizontalScrollMode="Disabled" VerticalScrollBarVisibility="Hidden" Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" Margin="4,0,4,4" Padding="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Width="70" Grid.Row="0" Grid.Column="0"
                Spacing="4" Orientation="Vertical" VerticalAlignment="Top">
                    <widgets:NavButton x:ConnectionId='14' x:Name="DiscoverNavButton"
                        x:FieldModifier="public"
                        Text="Discover Packages"
                        Glyph="&#xF6FA;"                                
                        />
                    <Grid>
                        <widgets:NavButton x:ConnectionId='18' x:Name="UpdatesNavButton"
                            x:FieldModifier="public"
                            Text="Software Updates"
                            Glyph="&#xE895;"                               
                        />
                        <InfoBadge x:ConnectionId='19' Value="0" Name="__updates_count_badge" Visibility="Collapsed" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,1.5,1.5,0"/>
                    </Grid>
                    <widgets:NavButton x:ConnectionId='15' x:Name="InstalledNavButton"
                        x:FieldModifier="public"
                        Text="Installed Packages"
                        Glyph="&#xE977;"                                 
                    />
                    <Grid>
                        <widgets:NavButton x:ConnectionId='16' x:Name="BundlesNavButton"
                            x:FieldModifier="public"
                            Text="Package Bundles"
                            Glyph="&#xF133;"                               
                        />
                        <InfoBadge x:ConnectionId='17' Value="0" Name="__bundle_count_badge" Visibility="Collapsed" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,1.5,1.5,0"/>
                    </Grid>
                </StackPanel>

                <StackPanel
                    Grid.Row="2" Grid.Column="0"
                    Width="70"
                    Spacing="4" Orientation="Vertical" VerticalAlignment="Bottom">
                    <widgets:NavButton x:ConnectionId='11'
                        Text="About" x:Name="AboutNavButton"
                        x:FieldModifier="public"
                        Glyph="&#xE946;"                             
                        />
                    <widgets:NavButton x:ConnectionId='12'
                        Text="Settings" x:Name="SettingsNavButton"
                        x:FieldModifier="public"
                        Glyph="&#xE713;"                                
                        />
                    <widgets:NavButton x:ConnectionId='13'
                        Text="More" x:Name="MoreNavButton"
                        x:FieldModifier="public"
                        Glyph="&#xE712;"                            
                        />
                </StackPanel>
            </Grid>
        </ScrollViewer>

    </Grid>
</UserControl>

